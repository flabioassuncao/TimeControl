<html ng-app="timeControl">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Projects → TimeControl</title>
		<link href="~/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet">
		<link href="~/assets/css/style.css" rel="stylesheet">
		<link href="~/assets/css/owl.carousel.css" rel="stylesheet">
		<link href="~/assets/css/owl.theme.css" rel="stylesheet">
        <link href="~/favicon/favicon.ico" rel="shortcut icon" id="favicon">
        <script src="~/lib/angular/angular.js"></script>
        <script src="~/lib/angular/angular-messages.js"></script>
        <script src="~/js/app.js"></script>
        <script src="~/js/controllers/timeControlCtrl.js"></script>
        <script src="~/js/services/activityAPIService.js"></script>
        <script src="~/js/services/serialGeneratorService.js"></script>
        <script src="~/js/config/serialGeneratorConfig.js"></script>
        <script src="~/js/services/timeFilter.js"></script>
        <script src="~/js/value/configValue.js"></script>
        <script src="~/js/services/addhourService.js"></script>
        <script src="~/moment/moment.js"></script>
        <script src="~/moment/locale/pt-br.js"></script>
        <link href="~/animate/animate.css" rel="stylesheet">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"> </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet">
        
        
		<!--[if lt IE 9]>
		      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
		      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
		<![endif]-->
		<script>
		    paceOptions = {
		      elements: true
		    };
		</script>
		<script src="~/assets/js/pace.min.js"></script>
		
	</head>
	<body ng-controller="timeControlCtrl">
	<div id="wrapper">
		<div class="header">
			<nav class="navbar   navbar-site navbar-default" role="navigation">
			<div class="container">
				<div class="navbar-header">
					<button data-target=".navbar-collapse" data-toggle="collapse" class="navbar-toggle" type="button"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
                </div>
				<div class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
                        <li><a asp-controller="Initial" asp-action="timer">Timer</a></li>
						<li><a asp-controller="Initial" asp-action="projects">Projects</a></li>
                        <li id="usuario"><a asp-controller="Initial" asp-action="timer">@ViewBag.Nome</a></li>
                        <li>
                            <form asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" >
                                <button type="submit" class="btn btn-link ">Log off</button>
                            </form>
                        </li>
					</ul>
				</div>
			 </div>
			</nav>
		</div>
		<div class="intro">
			<div class="dtable hw100">
				<div class="dtable-cell hw100">
					<div class="container text-center">
						<h1 class="intro-title animated fadeInDown"> TIME CONTROL </h1>
						<p class="sub animateme fittext3 animated fadeIn"> Controle o tempo que você dedica ao seu projeto </p>
					</div>
				</div>
			</div>
		</div>
		<div class="main-container">
			<div class="container">
				<div class="row">
					<div class="col-sm-12 page-content col-thin-right">
						<div class="inner-box category-content">
							<h2 class="title-2"> Tempos salvos </h2>
							<div class="table-responsive">
								<div class="table-action">
									<div class="table-search pull-right col-xs-7">
										<div class="form-group">
											<label class="col-xs-5 control-label text-right">Buscar <br>
												<a title="clear filter" class="clear-filter" href="#clear">[clear]</a> 
											</label>
											<div class="col-xs-7 searchpan">
												<input name="data[search]" class="form-control" id="search" ng-model="criterioDeBusca" type="text" class="form-control" id="filter">
											</div>
										</div>
									</div>
								</div>
								<table id="addManageTable" class="table table-striped table-bordered add-manage-table table demo" data-filter="#filter" data-filter-text-only="true" ng-show="activities.length > 0">
								  <thead>
								    <tr>
								      <th> Issue </th>
								      <th data-sort-ignore="true"> Detalhes </th>
								      <th data-type="numeric"> Tempo </th>
								      <th> Option </th>
								    </tr>
								  </thead>
								  <tbody>
								    <tr  ng-repeat="activity in act = (activities | filter:criterioDeBusca | filter: '@ViewBag.Nome' ) | orderBy:criterioDeOrdenacao:direcaoDaOrdenacao">
									    <td style="width:24%" class="add-img-td">
									       <div>
									    	  <strong><a href="{{activity.Link}}"> {{activity.Link}} </a></strong>
									       </div>
									    </td>
									    <td style="width:50%" class="ads-details-td">
										    <div>
										      <p> {{activity.Observation}} </p>
										    </div>
									    </td>
									    <td style="width:16%" class="price-td">
										    <div>
										    	<strong> {{activity.Time}}</strong>
										    </div>
									    </td>
									    <td style="width:10%" class="action-td">
										    <div>
											    <!--<p><a class="btn btn-primary btn-xs"> Editar </a></p>-->
											    <p> <a ng-click="deletarActivity(activity.activityId)" class="btn btn-danger btn-xs"> Delete </a></p>
										    </div>
									    </td>
								    </tr>
								  </tbody>
								</table>
                                <div class="table-action">
									<div class="table-search pull-right col-xs-7">
										<div class="form-group">
											<label class="col-xs-8 control-label text-right">Tempo total: {{ timeTotal() }} <br></label>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	</div>
		
		<script src="~/assets/bootstrap/js/bootstrap.min.js"></script>
		<script src="~/assets/js/owl.carousel.min.js"></script>
		<script src="~/assets/js/jquery.matchHeight-min.js"></script>
		<script src="~/assets/js/hideMaxListItem.js"></script>
		<script src="~/assets/plugins/jquery.fs.scroller/jquery.fs.scroller.js"></script>
		<script src="~/assets/plugins/jquery.fs.selecter/jquery.fs.selecter.js"></script>
		<script src="~/assets/js/script.js"></script>
		<script type="text/javascript" src="~/assets/plugins/autocomplete/jquery.mockjax.js"></script>
		<script type="text/javascript" src="~/assets/plugins/autocomplete/jquery.autocomplete.js"></script>
		<script type="text/javascript" src="~/assets/plugins/autocomplete/autocomplete-demo.js"></script>
	</body>
</html>
